@using BettingTournament.Core.Models

<MudDataGrid Items="@Game.ActiveBets.OrderBy(x => x.ApplicationUser.UserName)" RowStyleFunc="GetRowStyle">
    <Columns>
        <PropertyColumn Property="x => x.ApplicationUser.UserName" Title="Uzytkownik" />
        <PropertyColumn Property="x => x.HomeTeamBet" Title="Zaklad Druzyna A" />
        <PropertyColumn Property="x => x.AwayTeamBet" Title="Zaklad Druzyna B" />
    </Columns>
</MudDataGrid>

@code {
    [Parameter]
    public ActiveGame Game { get; set; } = default!;

    private string GetRowStyle(ActiveBet bet, int index)
    {
        if (!bet.BetPlaced)
        {
            return "background-color: lightcoral";
        }

        return "background-color: lightgreen";
    }
}