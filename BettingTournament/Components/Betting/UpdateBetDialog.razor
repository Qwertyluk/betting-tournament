@using BettingTournament.Core
@using BettingTournament.Core.Services
@inject RoundService RoundService

<MudDialog>
    <DialogContent>
        <BetForm @bind-Bet="Bet"/>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton OnClick="Submit">Bet</MudButton>
    </DialogActions>
</MudDialog>
@code {
    [Parameter]
    public Bet Bet { get; set; } = default!;

    [CascadingParameter]
    private MudDialogInstance MudDialog { get; set; } = default!;

    private void Submit()
    {
        RoundService.UpdateBet(Bet.Id, Bet.HomeScore, Bet.AwayScore);

        MudDialog.Close(DialogResult.Ok(true));
    }

    private void Cancel() => MudDialog.Cancel();
}