@using BettingTournament.Core
<MudContainer>
    <MudText>@Bet.Game.HomeTeam</MudText>
    <MudTextField @bind-Value="Bet.HomeScore" Label="Home Team Score" />
    <MudText>@Bet.Game.AwayTeam</MudText>
    <MudTextField @bind-Value="Bet.AwayScore" Label="Away Team" />
</MudContainer>

@code {
    [Parameter]
    public Bet Bet { get; set; } = default!;

    [Parameter]
    public EventCallback<Bet> BetChanged { get; set; }
}
