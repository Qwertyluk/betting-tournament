@using BettingTournament.Core
@using BettingTournament.ViewModels
<MudContainer Class="d-inline-flex gap-5">
    <MudTextField T="int" Value="@Bet.HomeScore" ValueChanged="HomeScoreChanged" Label="@Bet.HomeTeam" />
    <MudText Class="align-self-end">:</MudText>
    <MudTextField T="int" Value="@Bet.AwayScore" ValueChanged="AwayScoreChanged" Label="@Bet.AwayTeam" />
</MudContainer>

@code {
    [Parameter]
    public BetViewModel Bet { get; set; } = default!;

    [Parameter]
    public EventCallback<BetViewModel> BetChanged { get; set; }

    private async Task HomeScoreChanged(int value)
    {
        Bet.HomeScore = value;
        await BetChanged.InvokeAsync(Bet);
    }

    private async Task AwayScoreChanged(int value)
    {
        Bet.AwayScore = value;
        await BetChanged.InvokeAsync(Bet);
    }
}
