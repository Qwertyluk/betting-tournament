<MudContainer>
    <MudTextField ValueChanged="HomeTeamChanged" Label="Home Team" />
    <MudTextField ValueChanged="AwayTeamChanged" Label="Away Team" />
</MudContainer>

@code {
    [Parameter]
    public string HomeTeam { get; set; } = string.Empty;

    [Parameter]
    public EventCallback<string> HomeTeamChanged { get; set; }

    [Parameter]
    public string AwayTeam { get; set; } = string.Empty;

    [Parameter]
    public EventCallback<string> AwayTeamChanged { get; set; }
}
